generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  email      String?
  profilePic String?
  gitHubId   String    @unique
  PrevImgs   Image[]
  Preview    Preview[]
}

model Image {
  uploadId String @id @unique
  url      String
  userId   Int?
  user     User?  @relation(fields: [userId], references: [id])
}

model Preview {
  id       Int     @id @default(autoincrement())
  img      String
  product  String
  position Float[]
  scale    Float[]
  color    String
  userId   Int?
  user     User?   @relation(fields: [userId], references: [id])
}
